<appian-plugin name="LCM Connected System - Twilio" key="com.lcm.twilio">

  <plugin-info>
    <description>LCM Connected System - Twilio</description>
    <vendor name="Low Code Minds" url="www.lowcodeminds.com" />
    <version>1.1.1</version>
    <application-version min="23.3" />
  </plugin-info>

  <connected-system-template key="TwilioConnectedSystemTemplate" name="TwilioConnectedSystemTemplate"
                             class="com.lcm.twilio.templates.TwilioConnectedSystemTemplate">

    <integration-template key="SendSMSIntegrationTemplate" name="SendSMSIntegrationTemplate"
                          class="com.lcm.twilio.templates.sms.SendSMSIntegrationTemplate" />
    <integration-template key="SendWhatsappIntegrationTemplate" name="SendWhatsappIntegrationTemplate"
                          class="com.lcm.twilio.templates.whatsapp.SendWhatsappIntegrationTemplate" />
    <integration-template key="ReceiveSMSIntegrationTemplate" name="ReceiveSMSIntegrationTemplate"
                          class="com.lcm.twilio.templates.sms.ReceiveSMSIntegrationTemplate" />
    <integration-template key="ReceiveWhatsappMessage" name="ReceiveWhatsappMessage"
                          class="com.lcm.twilio.templates.whatsapp.ReceiveWhatsappMessage" />
    <integration-template key="SendWhatsappMessageWithTemplate" name="SendWhatsappMessageWithTemplate"
                          class="com.lcm.twilio.templates.whatsapp.SendWhatsappMessageWithTemplate" />
    <integration-template key="ReceiveSMSBySID" name="ReceiveSMSBySID"
                          class="com.lcm.twilio.templates.sms.ReceiveSMSBySID" />
    <integration-template key="ReceiveWhatsappMessageBySID" name="ReceiveWhatsappMessageBySID"
                          class="com.lcm.twilio.templates.whatsapp.ReceiveWhatsappMessageBySID" />
  </connected-system-template>
</appian-plugin>
